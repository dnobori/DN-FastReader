@model ErrorViewModel
@{
    Model._MarkNotNull();
    ViewData["Title"] = "エラー";
}

<h1 class="text-danger">以下のエラーが発生しました:</h1>
<p>　</p>
<h2 class="text-danger"><b>メッセージ: @Model.ErrorMessage</b></h2>
<p>　</p>
<p>　</p>

@if (Model.ShowRequestId)
{
    <p>
        <strong>リクエスト ID:</strong> <code>@Model.RequestId</code>
    </p>
}

